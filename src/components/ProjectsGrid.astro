---
import type { Project } from "../data/projects";
import { projects } from "../data/projects";
const list: Project[] = projects;
---

<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6">
  {list.map((p) => (
    <article class="card hover:border-accent transition flex flex-col">
      {p.cover && (
        <img src={p.cover} alt={p.title} loading="lazy"
             class="mb-4 rounded-xl border border-white/10 w-full object-cover aspect-[16/9]" />
      )}

      <header class="flex items-start justify-between gap-3">
        <h3 class="card-title">{p.title}</h3>
        {p.year && <span class="text-xs text-zinc-400">{p.year}</span>}
      </header>

      <p class="mt-2 text-zinc-400">{p.description}</p>

      <div class="mt-4 flex flex-wrap gap-2">
        {p.stack.map((s) => <span class="chip">{s}</span>)}
        {p.hosting && <span class="chip">Hosting: {p.hosting}</span>}
      </div>

      <div class="mt-5 flex gap-2">
        {p.link && (
          <a href={p.link} target="_blank" rel="noopener"
             class="px-3 py-2 rounded-lg bg-accent text-black text-sm font-medium hover:opacity-90 transition">
            Ver sitio
          </a>
        )}
        {p.repo && (
          <a href={p.repo} target="_blank" rel="noopener"
             class="px-3 py-2 rounded-lg border border-white/10 text-sm hover:border-white/20 transition">
            CÃ³digo
          </a>
        )}
      </div>
    </article>
  ))}
</div>
