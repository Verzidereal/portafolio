---
interface Props {
  avatar?: string;             // ruta a tu foto (public/‚Ä¶)
  name?: string;
  role?: string;
  email?: string;
  phone?: string;              // E.164 sin ‚Äú+‚Äù, ej: 522291311673
  calendly?: string;           // URL Calendly
  cvUrl?: string;              // /cv/Verzide-CV.pdf (col√≥calo en public/)
  stacks?: string[];           // chips
}

const {
  avatar = "/assets/img/avatar.jpg",
  name = "Verzide",
  role = "Frontend/Full-Stack ¬∑ Astro + React",
  email = "contacto@verzide.com",
  phone = "52XXXXXXXXXX",
  calendly = "",
  cvUrl = "/cv/Verzide-CV.pdf",
  stacks = ["Astro", "React", "Tailwind", "TypeScript", "Cloudflare Pages", "WordPress"]
} = Astro.props as Props;

const wa = phone ? `https://wa.me/${phone}?text=${encodeURIComponent("Hola, vi tu portafolio y me interesa un proyecto üòä")}` : undefined;
---

<section id="sobre-mi" class="rounded-2xl border border-white/10 bg-white/5 p-6 md:p-8">
  <div class="grid grid-cols-1 md:grid-cols-[220px,1fr] gap-6 md:gap-8 items-start">
    <!-- Avatar -->
    <div class="flex md:block justify-center">
      <figure class="size-40 md:size-48 rounded-2xl overflow-hidden border border-white/10 bg-white/5">
        <img src={avatar} alt={`Foto de ${name}`} class="h-full w-full object-cover" loading="lazy" />
      </figure>
    </div>

    <!-- Contenido -->
    <div>
      <h2 class="text-xl sm:text-2xl font-semibold">Sobre m√≠</h2>
      <p class="mt-3 text-zinc-300">
        Soy {name}, desarrollador orientado a crear experiencias web <em>oscuras, limpias y r√°pidas</em>.
        Me enfoco en rendimiento, accesibilidad, SEO y micro-animaciones que elevan la conversi√≥n.
      </p>

      <!-- Chips -->
      <div class="mt-4 flex flex-wrap gap-2">
        {stacks.map((t) => <span class="chip">{t}</span>)}
      </div>

      <!-- Mini highlights -->
      <ul class="mt-5 grid grid-cols-1 sm:grid-cols-3 gap-3">
        <li class="card p-3">
          <div class="text-sm text-zinc-400">Enfoque</div>
          <div class="font-medium">Rendimiento & A11y</div>
        </li>
        <li class="card p-3">
          <div class="text-sm text-zinc-400">Entregables</div>
          <div class="font-medium">UI limpia + SEO listo</div>
        </li>
        <li class="card p-3">
          <div class="text-sm text-zinc-400">Stack</div>
          <div class="font-medium">Astro ¬∑ React ¬∑ Tailwind</div>
        </li>
      </ul>

      <!-- Contacto / CTAs -->
      <div class="mt-6 flex flex-wrap gap-3">
        {cvUrl && (
          <a href={cvUrl} class="btn" target="_blank" rel="noopener" download>
            Descargar CV
          </a>
        )}
        {wa && (
          <a href={wa} class="btn-outline" target="_blank" rel="noopener">
            WhatsApp
          </a>
        )}
        {calendly && (
          <a href={calendly} class="btn-outline" target="_blank" rel="noopener">
            Agendar llamada
          </a>
        )}
        <a href={`mailto:${email}`} class="px-3 py-2 rounded-lg border border-white/10 hover:border-white/20">
          {email}
        </a>
      </div>
    </div>
  </div>
</section>
