---
import Base from "../layouts/Base.astro";
import Hero from "../components/Hero.tsx";

const proyectos = [
  { t: "Landing oscura", d: "UI elegante con microinteracciones.", u: "#" },
  { t: "Dashboard", d: "Cards, tablas y filtros.", u: "#" },
  { t: "Animaciones", d: "Transiciones y scroll.", u: "#" },
];
---
<Base title="Verzide — Portafolio">
  <header class="sticky top-0 backdrop-blur bg-bg/70 border-b border-white/5">
    <div class="mx-auto max-w-6xl px-4 py-4 flex items-center justify-between">
      <a href="/" class="flex items-center gap-3 group">
        <img src="/assets/img/avatar.svg" alt="Logo" class="w-8 h-8 opacity-90 group-hover:opacity-100 transition" />
        <span class="font-semibold tracking-wide">Verzide</span>
      </a>
      <nav class="flex gap-6 text-zinc-300">
        <a class="hover:text-white transition" href="#proyectos">Proyectos</a>
        <a class="hover:text-white transition" href="#sobre-mi">Sobre mí</a>
        <a class="hover:text-white transition" href="#contacto">Contacto</a>
      </nav>
    </div>
  </header>

  <main class="mx-auto max-w-6xl px-4">
    <Hero client:load />
    <section id="proyectos" class="py-8">
      <h2 class="text-2xl font-semibold mb-6">Proyectos destacados</h2>
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {proyectos.map(p => (
          <article class="card hover:border-accent transition">
            <h3 class="card-title">{p.t}</h3>
            <p class="mt-2 text-zinc-400">{p.d}</p>
            <a class="mt-4 inline-block text-accent hover:brightness-110 transition" href={p.u}>Ver →</a>
          </article>
        ))}
      </div>
    </section>

    <section id="sobre-mi" class="py-12">
      <h2 class="text-2xl font-semibold mb-4">Sobre mí</h2>
      <p class="text-zinc-300 max-w-2xl">Soy Verzide. Construyo experiencias web rápidas con buen diseño y animaciones.</p>
    </section>

    <section id="contacto" class="py-12">
      <h2 class="text-2xl font-semibold mb-4">Contacto</h2>
      <a class="underline underline-offset-4 hover:text-accent transition" href="mailto:contacto@verzide.com">contacto@verzide.com</a>
    </section>
  </main>

  <footer class="mt-16 border-t border-white/5">
    <div class="mx-auto max-w-6xl px-4 py-10 text-zinc-400">
      © <span id="year"></span> Verzide · Hecho con cariño
    </div>
  </footer>
</Base>
