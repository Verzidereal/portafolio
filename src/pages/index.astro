---
import Base from "../layouts/Base.astro";
import Nav from "../components/Nav.tsx";
import Hero from "../components/Hero.tsx";
import Skills from "../components/Skills.tsx";
import ContactForm from "../components/ContactForm.astro";
import WhatsAppFab from "../components/WhatsAppFab.astro";
import ProjectsBrowser from "../components/ProjectsBrowser.tsx";
import TestimonialsCarousel from "../components/TestimonialsCarousel.tsx";
import Services from "../components/Services.astro";
import Process from "../components/Process.astro";

const testimonios = [
  { name: "Jultz", role: "DTF • Teziutlán, Pue.", quote: "Nos ayudó a lanzar la tienda con un diseño limpio y rápido. Excelente comunicación y entrega puntual." },
  { name: "Green World", role: "EdTech", quote: "Implementó la app/sitio con gran atención al detalle y rendimiento. Recomendado." },
  { name: "Cliente anónimo", role: "E-commerce", quote: "Gran trabajo en UX y microanimaciones que subieron la conversión de la landing." },
];
---

<Base title="Verzide — Portafolio">
  <Nav client:load />

  <main class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <!-- Hero más compacto -->
    <section class="pt-10 pb-12 md:pt-12 md:pb-14">
      <Hero client:load />
    </section>

    <!-- Servicios -->
    <section id="servicios" class="py-8 md:py-12 scroll-mt-28">
      <Services phone="522291311673" calendly="https://calendly.com/TU_USUARIO/30min" />
    </section>

    <!-- Proceso -->
    <section id="proceso" class="py-8 md:py-12 scroll-mt-28">
      <Process phone="522291311673" calendly="https://calendly.com/TU_USUARIO/30min" />
    </section>

    <!-- Habilidades -->
    <section id="skills" class="py-8 md:py-12 scroll-mt-28">
      <h2 class="text-xl sm:text-2xl font-semibold mb-5">Habilidades</h2>
      <Skills client:visible />
    </section>

    <!-- Proyectos -->
    <section id="proyectos" class="py-8 md:py-12 scroll-mt-28">
      <h2 class="text-xl sm:text-2xl font-semibold mb-5">Proyectos destacados</h2>
      <ProjectsBrowser client:load />
    </section>

    <!-- Testimonios (envuelto para controlar el espacio) -->
    <section id="testimonios" class="py-8 md:py-12 scroll-mt-28">
      <TestimonialsCarousel client:load items={testimonios} intervalMs={4500} pauseOnHover={true} />
    </section>

    <!-- Contacto -->
    <section id="contacto" class="py-10 md:py-14 scroll-mt-28">
      <h2 class="text-xl sm:text-2xl font-semibold mb-5">Contáctame</h2>
      <ContactForm mailto="contacto@verzide.com" />
    </section>
  </main>

  <footer class="mt-10 md:mt-12 border-t border-white/5">
    <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8 py-8 md:py-10 text-zinc-400">
      © <span id="year"></span> Verzide · Todos los derechos reservados.
    </div>
  </footer>

  <!-- WhatsApp flotante (código de país + número) -->
  <WhatsAppFab phone="522291311673" />
</Base>
