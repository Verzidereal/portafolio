---
import Base from "../layouts/Base.astro";
import Nav from "../components/Nav.tsx";
import Hero from "../components/Hero.tsx";
import Skills from "../components/Skills.tsx";
import ContactForm from "../components/ContactForm.astro";
import WhatsAppFab from "../components/WhatsAppFab.astro";
import ProjectsGrid from "../components/ProjectsGrid.astro";
import ProjectsBrowser from "../components/ProjectsBrowser.tsx";
import Testimonials from "../components/Testimonials.astro";

const proyectos = [
  { t: "Landing oscura", d: "UI elegante con microinteracciones.", u: "#" },
  { t: "Dashboard", d: "Cards, tablas y filtros.", u: "#" },
  { t: "Animaciones", d: "Transiciones y scroll.", u: "#" },
];
const testimonios = [
  {
    name: "Jultz",
    role: "DTF • Teziutlán, Pue.",
    quote:
      "Nos ayudó a lanzar la tienda con un diseño limpio y rápido. Excelente comunicación y entrega puntual.",
    // avatar: "/assets/testimonials/jultz.jpg",
  },
  {
    name: "Green World",
    role: "EdTech",
    quote:
      "Implementó la app/sitio con gran atención al detalle y rendimiento. Recomendado.",
    // avatar: "/assets/testimonials/greenworld.jpg",
  },
  {
    name: "Cliente anónimo",
    role: "E-commerce",
    quote:
      "Gran trabajo en UX y microanimaciones que subieron la conversión de la landing.",
  },
];

---
<Base title="Verzide — Portafolio">
  <Nav client:load />

  <main class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <section class="py-12 md:py-20">
      <Hero client:load />
    </section>

    <section class="py-10 md:py-14" id="habilidades">
      <h2 class="text-xl sm:text-2xl font-semibold mb-4 sm:mb-6">Habilidades</h2>
      <Skills />
    </section>

   <section id="proyectos" class="py-8 md:py-12">
  <h2 class="text-xl sm:text-2xl font-semibold mb-4 sm:mb-6">Proyectos destacados</h2>
  <ProjectsBrowser client:load />
</section>

<Testimonials client:load items={testimonios} intervalMs={4500} pauseOnHover={true} />

    <section id="contacto" class="py-10 md:py-14">
      <h2 class="text-xl sm:text-2xl font-semibold mb-4">Contáctame</h2>
      <!-- Cambia mailto si quieres -->
      <ContactForm mailto="contacto@verzide.com" />
    </section>
  </main>

  <footer class="mt-12 md:mt-16 border-t border-white/5">
    <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8 py-8 md:py-10 text-zinc-400">
      © <span id="year"></span> Verzide · Todos los derechos reservados.
    </div>
  </footer>

  <!-- WhatsApp flotante: cambia el phone a tu número real con código de país -->
  <WhatsAppFab phone="522291311673" />
</Base>
