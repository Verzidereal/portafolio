---
import FireworksBG from "../components/Fireworks";
const mensaje = "Te quiero mucho";
const letras = [...mensaje];
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <title>Especial — Verzide</title>
    <meta name="robots" content="noindex, nofollow" />

    <style is:inline>
      /* 1) Aparición inicial */
      @keyframes pop-in {
        0% { opacity: 0; transform: translateY(14px) scale(.95); filter: blur(4px); }
        60% { opacity: 1; transform: translateY(0) scale(1.04); filter: blur(0); }
        100% { opacity: 1; transform: translateY(0) scale(1); }
      }

      /* 2) Balanzo suave infinito por letra */
      @keyframes wave {
        0%, 100% { transform: translateY(0) }
        25% { transform: translateY(-6px) }
        50% { transform: translateY(0) }
        75% { transform: translateY(6px) }
      }

      .letra {
        display: inline-block;
        /* Encadenamos 2 animaciones:
           - pop-in una vez
           - wave infinito con retraso escalonado
        */
        animation:
          pop-in 600ms both,
          wave 2400ms ease-in-out infinite;
        /* Delays independientes (uno para cada animación) */
        animation-delay: var(--pop, 0ms), var(--stagger, 0ms);
        will-change: transform, opacity, filter;
      }

      /* Respeta accesibilidad: menos movimiento si el usuario lo prefiere */
      @media (prefers-reduced-motion: reduce) {
        .letra { animation: none !important; }
      }

      /* Brillito sutil */
      .glow { text-shadow: 0 0 8px rgba(255,255,255,.25); }
    </style>
  </head>

  <body class="min-h-screen bg-black text-white">
    <FireworksBG client:load />
    <main class="min-h-screen grid place-items-center px-6 text-center">
      <section class="space-y-6">
        <p class="text-xs uppercase tracking-widest opacity-70">
          Para alguien especial ✨
        </p>

        <h1 class="text-5xl sm:text-6xl md:text-7xl font-extrabold leading-tight glow">
          {
            letras.map((c, i) => (
              <span
                class="letra"
                /* --pop: delay del pop-in; --stagger: delay del wave infinito */
                style={`--pop:${i * 60}ms; --stagger:${i * 80}ms`}
              >
                {c === ' ' ? '\u00A0' : c}
              </span>
            ))
          }
        </h1>
      </section>
    </main>
  </body>
</html>
